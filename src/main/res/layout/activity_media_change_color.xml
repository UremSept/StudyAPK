<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".studymedia.canvas.ActivityMediaChangeColor">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="线性渐变着色器"
        android:id="@+id/mediaChangeColorBtn1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="环形渐变着色器"
        android:id="@+id/mediaChangeColorBtn2"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="扇形渐变着色器"
        android:id="@+id/mediaChangeColorBtn3"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mediaChangeColorBtn4"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mediaChangeColorBtn5"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/mediaChangeColorImage"/>
</LinearLayout>
