<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.houjie.studyapk.studymedia.ActivityMedia">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MeidaMipmapBtn"
        android:text="加载图片，与裁剪"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MeidaCanvasBtn"
        android:text="画布"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MediaCanvasZigzagBtn"
        android:text="曲折线"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MediaXfermode"
        android:textAllCaps="false"
        android:text="Xfermode"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mediaCatPicture"
        android:textAllCaps="false"
        android:text="裁剪相册图片"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mediaChangeColer"
        android:textAllCaps="false"
        android:text="调色器"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mediaMatrix"
        android:textAllCaps="false"
        android:text="图片变化"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mediaMusic"
        android:textAllCaps="false"
        android:text="音乐"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mediaVideo"
        android:textAllCaps="false"
        android:text="视频"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mediaRecord"
        android:textAllCaps="false"
        android:text="录制视频"
        />
</LinearLayout>
