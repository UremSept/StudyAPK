<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myedit ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.houjie.studyapk.studyview.custom.ActivityCustomView">
    <com.example.houjie.studyapk.studyview.custom.CustomViewEditview
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="这是自定义的编辑文本框"
        myedit:count_color="@color/colorAccent"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnViewCustomViewGroup"
        android:textAllCaps="false"
        android:text="查看自定义ViewGroup"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnViewCustomAccBall"
        android:textAllCaps="false"
        android:text="加速球"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnViewCustomEnvent"
        android:textAllCaps="false"
        android:text="自定义点击事件"/>
</LinearLayout>
