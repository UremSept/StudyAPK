<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/chat_left_image"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_left_text"
        android:layout_toRightOf="@id/chat_left_image"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试抢占焦点"
        android:layout_toRightOf="@id/chat_left_text"
        android:id="@+id/chat_left_button"
        android:focusable="false"
        />
    <!-- button会抢占焦点 android:focusable="false"可以改变-->
</RelativeLayout>